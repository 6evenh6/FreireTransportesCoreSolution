<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreireTransportesCoreSolution</title>
    <!-- Aqui renderizamos os estilos das views -->
    

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FreireTransportesCoreSolution.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom styles for this template -->
    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="d-flex">

        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark text-white min-vh-100">
            <div class="p-3">
                
                <h1 class="text-white fs-5">Freire Transportes</h1>
                
                <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li>
                            @* btn btn-toggle align-items-center rounded text-white *@
                            <button class="nav-link text-white bi-file-earmark-person-fill hover-custom" data-bs-toggle="collapse" data-bs-target="#cliente-collapse" aria-expanded="false"> Cliente </button>
                                <div class="collapse" id="cliente-collapse">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small text-light">
                                        <li>
                                            <a href="/Cliente" class="text-light rounded d-flex align-items-center">
                                            <i class="bi-plus-circle me-2"></i>
                                                Registrar
                                            </a>
                                            </li>
                                        <li>
                                            <a href="/Cliente/Details" class="text-light rounded">
                                                <i class="bi-pencil-square me-2"></i>
                                                Alterar/Detalhe
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                        </li>
                        @* <a href="/clientes" class="nav-link text-white bi-file-earmark-person-fill hover-custom" onclick="navigateTo('clientes')"> Clientes </a> *@

                        <li><a href="#" class="nav-link text-white bi-truck-flatbed hover-custom" onclick="navigateTo('caminhoes')"> Caminhões </a></li>
                        <li><a href="#" class="nav-link text-white bi-signpost-2-fill hover-custom" onclick="navigateTo('romaneios')"> Romaneios </a></li>
                        <li><a href="#" class="nav-link text-white bi-bank hover-custom" onclick="navigateTo('despesas')"> Despesas </a></li>
                        <li><a href="#" class="nav-link text-white bi-pencil-square hover-custom" onclick="navigateTo('manutencao')"> Manutenção </a></li>
                        <li><a href="#" class="nav-link text-white bi-cash-stack hover-custom" onclick="navigateTo('pagamentos')"> Pagamentos </a></li>
                        <li><a href="#" class="nav-link text-white bi-graph-down hover-custom" onclick="navigateTo('relatorios')"> Relatórios </a></li>
                        <li><a href="#" class="nav-link text-white bi-bell-fill hover-custom" onclick="navigateTo('alertas')"> Alertas </a></li>
                    </ul>
                <hr>
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                        <strong>Administrador</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Desativado...</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1 container-fluid">
            <main role="main">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - Transportadora Freire - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>


    

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>